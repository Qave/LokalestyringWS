<Page
    x:Class="LokalestyringUWP.View.PageUserBookings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="using:LokalestyringUWP.Handler"
    xmlns:Viewmodel="using:LokalestyringUWP.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LokalestyringUWP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <Viewmodel:UserBookingsVM />
    </Page.DataContext>
    <Page.Resources>
        <Converter:DateFormatConverter x:Name="DateToStringFormatConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--  HEADER  -->
        <Grid
            Grid.Row="0"
            Height="70"
            VerticalAlignment="Center"
            BorderBrush="LightGray"
            BorderThickness="0,0,0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="0"
                Grid.ColumnSpan="3"
                BorderBrush="#81a6c7"
                BorderThickness="0,0,0,0.5">
                <StackPanel
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <AppBarButton
                        Width="30"
                        Height="40"
                        Icon="Back" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="Bookings" />
                </StackPanel>
            </Border>
            <StackPanel
                Grid.Column="3"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <AppBarButton
                    Width="50"
                    Height="40"
                    Icon="GlobalNavigationButton" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Margin="35,50,35,35"
                Background="AliceBlue"
                BorderBrush="#81a6c7"
                BorderThickness="1"
                CornerRadius="5">
                <Grid Margin="0" Padding="20,0,20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        BorderBrush="#81a6c7"
                        BorderThickness="0,0,0,1">

                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.6*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock>
                                <Run
                                    FontSize="18"
                                    Foreground="black"
                                    Text="{Binding SelectedBooking.RoomName}" />
                                <Run
                                    FontSize="14"
                                    Foreground="Gray"
                                    Text="Klasselokale" />
                            </TextBlock>
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                FontSize="18"
                                Text="{Binding SelectedBooking.Date, Converter={StaticResource DateToStringFormatConverter}}" />
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="18"
                            Text="Etage: 1" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            FontSize="18">
                            <Run Text="{Binding SelectedBooking.Time_start, Converter={StaticResource DateToStringFormatConverter}}" />
                            <Run Text="-" />
                            <Run Text="{Binding SelectedBooking.Time_end, Converter={StaticResource DateToStringFormatConverter}}" />
                        </TextBlock>
                    </Grid>
                    <Grid Grid.Row="2" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="16"
                            Foreground="Gray"
                            Text="Bygning: D" />
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Background="white"
                            BorderBrush="Gray"
                            BorderThickness="0.5"
                            Content="Book igen imorgen"
                            CornerRadius="5"
                            FontSize="15" />
                    </Grid>
                    <Grid Grid.Row="3" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                    </Grid>
                    <Grid Grid.Row="3" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Visibility="Collapsed">
                            <TextBlock
                                FontSize="15"
                                Foreground="gray"
                                Text="Tavle: N/A" />
                        </StackPanel>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="15" Foreground="gray">
                                <Run Text="Tavletid:" />
                                <Run Text="{Binding SelectedBooking}" />
                                <Run Text="-" />
                                <Run Text="14:00" />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="4" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Background="white"
                            BorderBrush="Gray"
                            BorderThickness="0.5"
                            Content="Aflys Booking"
                            CornerRadius="5"
                            FontSize="15" />
                        <Button
                            Grid.Column="0"
                            HorizontalAlignment="left"
                            Background="white"
                            BorderBrush="Gray"
                            BorderThickness="0.5"
                            Content="Aflys Tavle"
                            CornerRadius="5"
                            FontSize="15" />
                    </Grid>
                    <Grid Grid.Row="5" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="15"
                            Foreground="gray"
                            Text="Book tavle-tid" />
                    </Grid>
                    <Grid Grid.Row="6" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBox
                                Width="80"
                                Margin="0,0,5,0"
                                Background="white"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="5"
                                PlaceholderText="Starttid" />
                            <ComboBox
                                Width="100"
                                Margin="0,0,5,0"
                                Background="white"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="5"
                                PlaceholderText="Varighed">
                                <ComboBoxItem>00:30</ComboBoxItem>
                                <ComboBoxItem>01:00</ComboBoxItem>
                                <ComboBoxItem>01:30</ComboBoxItem>
                                <ComboBoxItem>02:00</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Width="100"
                            HorizontalAlignment="Right"
                            Background="white"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Content="Book"
                            CornerRadius="5" />
                    </Grid>
                </Grid>
            </Border>
            <ScrollViewer Grid.Row="1">
                <Grid>
                    <ListView
                        Margin="35"
                        ItemsSource="{Binding AllBookingsViewSingleton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectedBooking, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="0,5,0,0" />
                                <Setter Property="Padding" Value="0,0,0,0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    BorderBrush="#ccc"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Grid Padding="15,10,15,10" Background="AliceBlue">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding RoomName}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Text="{Binding SelectedBooking.Date, Converter={StaticResource DateToStringFormatConverter}}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>
</Page>
