<Page
    x:Class="LokalestyringUWP.View.PageBookRooms"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="using:LokalestyringUWP.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LokalestyringUWP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <ViewModel:ViewModel />
    </Page.DataContext>

    <Page.Resources>
        <DataTemplate x:Key="RoomBookingsTemplate">
            <Grid>
                <Border
                    Width="200"
                    Height="100"
                    Background="LightGray" />
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="{Binding RoomIdString}" />
                    <TextBlock Text="{Binding RoomType}" />
                    <TextBlock Text="{Binding Building1}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <TextBlock Text="{Binding FloorString}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <!--  HEADER  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="0"
                Grid.ColumnSpan="3"
                BorderBrush="#81a6c7"
                BorderThickness="0,0,0,1">
                <StackPanel
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <AppBarButton
                        Width="30"
                        Height="40"
                        Icon="Back" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="HEJ KASPER" />
                </StackPanel>
            </Border>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="Roskilde" />
            <StackPanel
                Grid.Column="3"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <AppBarButton
                    Width="50"
                    Height="40"
                    Icon="Edit" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Margin="5" Text="Vælg bygning:" />
                <ComboBox Width="75" Margin="10,0,0,0" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Margin="5" Text="Vælg rumtype:" />
                <ComboBox Width="100" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Margin="5" Text="Dato:" />
                <CalendarDatePicker />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Margin="5" Text="Tid:" />
                <ComboBox />
                <TextBlock Margin="5" Text="til" />
                <ComboBox />
            </StackPanel>
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Width="125"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Gold"
                Content="Filtrér lokaler" />
        </Grid>
        <ScrollViewer Grid.Row="1">

            <GridView
                Grid.Row="3"
                Margin="10,0,10,60"
                ItemTemplate="{StaticResource RoomBookingsTemplate}"
                ItemsSource="{Binding RoomList}" />
        </ScrollViewer>
        <Button
            Grid.Row="1"
            Width="200"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Background="Gold"
            Content="Book valgt lokale" />
    </Grid>
</Page>
