<Page
    x:Class="LokalestyringUWP.View.PageBookRooms"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="using:LokalestyringUWP.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LokalestyringUWP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <ViewModel:ViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <!--  HEADER  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="0"
                Grid.ColumnSpan="3"
                BorderBrush="#81a6c7"
                BorderThickness="0,0,0,1">
                <StackPanel
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <AppBarButton
                        Width="30"
                        Height="40"
                        Icon="Back" />
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="HEJ KASPER" />
                </StackPanel>
            </Border>
            <StackPanel
                Grid.Column="3"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <AppBarButton
                    Width="50"
                    Height="40"
                    Icon="Edit" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Height="30"
                Margin="10,5,0,0"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock Text="Du er her: Roskilde" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30"
                Margin="0,5,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <TextBlock Text="Vælg bygning:" />
                <ComboBox Margin="10,0,0,0" VerticalAlignment="Stretch" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <CheckBox Content="Lille lokale" />
                <CheckBox Content="Mellemstor" />
                <CheckBox Content="Klasselokale" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <TextBlock Text="Dato:" />
                <CalendarDatePicker Margin="0,5,0,0" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <TextBlock Text="Tid:" />
                <TimePicker Margin="0,5,0,0" />
            </StackPanel>
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Width="125"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Gold"
                Content="Filtrér lokaler" />
        </Grid>
        <GridView
            Grid.Row="3"
            Margin="10,0,10,0"
            ItemsSource="{Binding RoomList}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Location1}"/>
                        <TextBlock Text="{Binding }"/>
                        <TextBlock Text="{Binding Location1}"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
